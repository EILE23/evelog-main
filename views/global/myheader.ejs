  <body>
    <header class="header">
      <div class="navibar">
        <!-- <div class="title">evelog</div>
          <div class="iconBox">
            <img class="icon" onclick="login()" src="../public/img/alam.png" />
            <img class="icon" onclick="login()" src="../public/img/search.png" />
